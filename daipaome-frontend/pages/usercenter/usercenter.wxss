}

.nickname{
  margin:4px;
  font-size:16px;
  font-weight: bolder;
}

.tip{
  font-size: 12px;
  color:red;
  margin-left: 16px
}
.categoryList {
  display: flex;
  align-items: center;
  width: 100%;
  height: 120rpx;
  background-color: white;
}

.category-info {
  display: inline-block;
  text-align: center;
  position: relative;
  margin: auto;
  margin-top: 0;
  height: 60rpx;
  width: 18%;
}

.category-image {
  width: 60rpx;
  height: 60rpx;
}

.category-text {
  font-size: 12px;
  width: 100%;
  line-height: 30rpx
}
