.head {
  display: flex;
  justify-content: space-around
}

.search {
  flex-grow:1.8
}

.sort {
  margin-top: 15px;
}

.mode {
  width: 20px;
}

.tag {
  border: 1rpx solid red;
  border-radius: 10rpx;
  padding: 5rpx;
  color: red;
}

.list-title {
  padding: 0 5px 0 10px;
  display: flex;
  justify-content: space-between;
}

.card {
  width: 140rpx;
  margin-left: 5%;
  height: 140rpx;
  background: white;
  border-radius: 10rpx;
  box-shadow: 5px 5px 5px #cdcfcf;
}

.list {
  position: relative;
  display: flex;
  padding-right: 10rpx;
  height: 200rpx;
  background-color: var(--white);
  align-items: center;
}

.cls1 {
  position: absolute;
  left: 166rpx;
  width: calc(100% - 96rpx - 60rpx - 120rpx - 20rpx);
  line-height: 1.6em;
}

.cls2 {
  width: calc(100% - 96rpx - 60rpx - 20rpx);
}