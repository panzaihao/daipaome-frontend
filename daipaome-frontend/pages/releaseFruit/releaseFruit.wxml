<form bindsubmit="saveInfo">
  <van-cell-group title="物品信息">
    <van-field left-icon="edit" custom-style="height:80px;" type="textarea" name="message" maxlength="50" label="简单描述"
      type="textarea" placeholder="请简要描述您所需要的物品(不超过50字)" autosize />
    <van-cell icon="orders-o" is-link title="物品分类" label="点击选择">
      <picker bindchange="BindPickerChange" value="{{class}}" range="{{sort}}">{{sort[class]}}</picker>
      <input name="sort" hidden="true" value="{{sort[class]}}" />
    </van-cell>
    <van-cell icon="gem-o" title="易碎物品">
      <radio-group name="isFragile">
        <radio class="red margin-left-sm" value="1" /> 是
        <radio class="red margin-left-sm" value="0" /> 否
      </radio-group>
    </van-cell>
    <van-field left-icon="location-o" name="pickup_address" label="取件地址" placeholder="请输入取件的具体位置" />
    <van-cell icon="location-o" is-link title="配送地址" label="点击选择">
      <picker mode="multiSelector" bindchange="bindAddressChange" bindcolumnchange="bindAddressColumnChange"
        value="{{addressIndex}}" range="{{addressArray}}">{{addressArray[1][addressIndex[1]]}}</picker>
      <input name="consignee_address" hidden="true" value="{{addressArray[1][addressIndex[1]]}}" />
    </van-cell>
    <van-cell icon="clock-o" is-link title="配送时间" label="点击选择">
      <picker mode="time" value="{{time}}" start="00:00" end="23:59" bindchange="bindTimeChange">{{time}}</picker>
      <input name="time" hidden="true" value="{{time}}" />
    </van-cell>
    <van-cell icon="sign" title="现在出发">
      <radio-group name="isUrgent" bindchange="bindChange">
        <radio class="red margin-left-sm" value="1" /> 是
        <radio class="red margin-left-sm" value="0" /> 否
      </radio-group>
    </van-cell>
    <van-cell icon="balance-o" title="赏金">
      <van-stepper name="money" value="{{ isUrgent }}" step="0.50" min="0.49" max="99.99" />
    </van-cell>
  </van-cell-group>

  <van-cell-group title="收件人信息">
    <view wx:if="{{isUsualAddress == true}}">
      <van-field left-icon="user-o" name="name" label="昵称" value="{{nicknames[addressIndex[1]]}}" />
    </view>
    <view wx:else>
      <van-field left-icon="user-o" name="name" label="昵称" placeholder="请输入您喜欢的昵称" />
    </view>
    <view wx:if="{{isUsualAddress == true}}">
      <van-field left-icon="phone-o" name="mobile" label="手机" value="{{mobiles[addressIndex[1]]}}" />
    </view>
    <view wx:else>
      <van-field left-icon="phone-o" name="mobile" label="手机" placeholder="请输入您的手机号码" />
    </view>
  </van-cell-group>

  <!-- <van-cell-group title="截图信息" border="{{false}}">
    <van-uploader class="screenshot" file-list="{{ fileList }}" max-count="2" preview-size="120px"
      deletable="{{ true }}" bind:after-read="afterRead" bind:delete="deleteImage" />
  </van-cell-group> -->
